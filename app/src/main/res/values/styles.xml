<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RaisedButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorButton</item>
    </style>

    <style name="FlatButtonTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorButton</item>
    </style>

    <style name="FABButton" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorButton</item>
    </style>

</resources>
